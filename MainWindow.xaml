<Window x:Class="Fisherman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fisherman"
        mc:Ignorable="d"
        Title="MainWindow" Height="389.614" Width="273.486">
    <Grid Margin="0,0,0,1">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <ScrollViewer>
        <TextBox Grid.Row="0" Name="logViewer"  TextWrapping="Wrap" Text="{Binding Path=Text}" Background="LightGray"/>
            </ScrollViewer>
        <Button Grid.Row="1" Content="Start"   VerticalAlignment="Top"  Click="StartFisherman"/>
    </Grid>
</Window>
